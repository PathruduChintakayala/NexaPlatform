{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@nexa/shared": ["packages/shared/src/index.ts"],
      "@nexa/shared/*": ["packages/shared/src/*"],
      "@nexa/ui": ["packages/ui/src/index.ts"],
      "@nexa/ui/*": ["packages/ui/src/*"]
    }
  }
}
